@model UserGroupsEditViewModel

<h6>@T["User Groups"]</h6>
<div class="mb-3">
    @foreach (var userGroup in Model.UserGroups)
    {
        var selected = Model.SelectedUserGroups.Contains(userGroup);
        <div class="col-md-3">
            <div class="custom-control custom-checkbox">
                <input id="@userGroup" name="@Html.NameFor(m => m.SelectedUserGroups)" type="checkbox" class="custom-control-input" value="@userGroup" checked="@(selected ? "checked" : null)">
                <label for="@userGroup" class="custom-control-label">@userGroup</label>
            </div>
        </div>
    }
</div>
