@using OrchardCoreContrib.Sms.Azure.ViewModels
@model AzureSmsSettingsViewModel

<h1>@RenderTitleSegments(T["Test Azure SMS Settings"])</h1>

<form asp-area="OrchardCore.Sms.Azure" asp-controller="Admin" asp-action="Index" method="post">
    @Html.ValidationSummary()

    <div class="form-group mb-3" asp-validation-class-for="PhoneNumber">
        <label asp-for="PhoneNumber">@T["Phone Number"]</label>
        <input asp-for="PhoneNumber" class="form-control" type="text" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    <div class="form-group mb-3" asp-validation-class-for="Message">
        <label asp-for="Message">@T["Message"]</label>
        <textarea asp-for="Message" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Message"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">@T["Send"]</button>
    </div>
</form>
