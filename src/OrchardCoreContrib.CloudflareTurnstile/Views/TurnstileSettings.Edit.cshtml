@model TurnstileSettingsViewModel
@using OrchardCore.DisplayManagement.Views
@using OrchardCoreContrib.CloudflareTurnstile.ViewModels

<div class="form-group">
    <label asp-for="SiteKey">@T["Site Key"]</label>
    <input asp-for="SiteKey" class="form-control" type="password" autocomplete="off" value="@Model.SiteKey" />
    <span asp-validation-for="SiteKey" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="SecretKey">@T["Secret Key"]</label>
    <input asp-for="SecretKey" class="form-control" type="password" autocomplete="off" value="@Model.SecretKey" />
    <span asp-validation-for="SecretKey" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Theme">@T["Theme"]</label>
    <select asp-for="Theme" class="form-control">
        <option value="light">@T["Light"]</option>
        <option value="dark">@T["Dark"]</option>
        <option value="auto">@T["Auto"]</option>
    </select>
    <small class="form-text text-muted">
        @T["Choose the Turnstile widget theme."]
    </small>
</div>

<div class="form-group">
    <label asp-for="Size">@T["Size"]</label>
    <select asp-for="Size" class="form-control">
        <option value="normal">@T["Normal"]</option>
        <option value="compact">@T["Compact"]</option>
    </select>
    <small class="form-text text-muted">
        @T["Choose the Turnstile widget size."]
    </small>
</div>
