<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<VersionPrefix>1.3.0</VersionPrefix>
		<Authors>The Orchard Core Contrib Team</Authors>
		<Company />
		<Description>Provides ability to query using LINQ in Orchard Core data source.</Description>
		<PackageLicenseExpression>BSD-3-Clause</PackageLicenseExpression>
		<PackageProjectUrl>https://github.com/OrchardCoreContrib/OrchardCoreContrib/tree/main/src/OrchardCoreContrib.Linq/README.md</PackageProjectUrl>
		<RepositoryUrl>https://github.com/OrchardCoreContrib/OrchardCoreContrib</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PublishRepositoryUrl>true</PublishRepositoryUrl>
		<PackageTags>Orchard Core, Orchard Core Contrib, LINQ</PackageTags>
		<PackageReleaseNotes>https://github.com/OrchardCoreContrib/OrchardCoreContrib/releases</PackageReleaseNotes>
		<PackageId>OrchardCoreContrib.Linq</PackageId>
		<PackageIcon>icon.png</PackageIcon>
		<Product>Orchard Core Contrib LINQ</Product>
		<PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
		<Copyright>2019 Orchard Core Contrib</Copyright>
	</PropertyGroup>

	<ItemGroup>
		<None Include="../../images/icon.png" Pack="true" PackagePath="icon.png" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="OrchardCore.Autoroute" Version="1.8.3" />
		<PackageReference Include="OrchardCore.Alias" Version="1.8.3" />
		<PackageReference Include="OrchardCore.Users.Core" Version="1.8.3" />
		<PackageReference Include="OrchardCore.AdminDashboard" Version="1.8.3" />
		<PackageReference Include="OrchardCore.AuditTrail.Abstractions" Version="1.8.3" />
		<PackageReference Include="OrchardCore.Deployment" Version="1.8.3" />
		<PackageReference Include="OrchardCore.Layers" Version="1.8.3" />
		<PackageReference Include="OrchardCore.Lists" Version="1.8.3" />
		<PackageReference Include="OrchardCore.PublishLater" Version="1.8.3" />
		<PackageReference Include="OrchardCore.Taxonomies" Version="1.8.3" />
		<PackageReference Include="OrchardCore.Workflows" Version="1.8.3" />
		<PackageReference Include="OrchardCore.OpenId.Core" Version="1.8.3" />
		<PackageReference Include="OrchardCore.ContentManagement" Version="1.8.3" />
		<PackageReference Include="OrchardCore.ContentLocalization.Abstractions" Version="1.8.3" />
		<PackageReference Include="linq2db" Version="5.4.1" />
	</ItemGroup>

</Project>
